{
  "manifest_version": 3,
  "name": "Price Tracker",
  "version": "1.0.0",
  "permissions": ["alarms", "storage", "tabs", "webRequest"],
  "host_permissions": ["*://*.realcanadiansuperstore.ca/*"],
  "action": { "default_popup": "pages/index.html" },
  "content_scripts": [
    {
      "js": ["dist/content.bundle.js"],
      "matches": ["*://*.realcanadiansuperstore.ca/*"]
    }
  ],
  "background": {
    "service_worker": "dist/background.bundle.js",
    "type": "module"
  }
}
